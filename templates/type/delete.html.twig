{% extends 'base.html.twig' %}

{% block title %}Type Trick Delete{% endblock %}

{% block body %}
<section id="type_delete" class="masthead bg-primary">
    <div class="container bg-white py-5 rounded">
        <div class="row col-10">
            <div class="">
                <a href="{{ path('app_type') }}" class="btn btn-primary">< Previous page</a>
            </div>
        </div>
        <div class="row d-flex justify-content-center">
            <div class="col-12 col-lg-6">
                <div class="col">
                    <div class="row mb-2">
                        <h1 class="text-center">Type Trick Delete</h1>
                        <hr class="divider" />
                    </div>
                    <div class="row">
                        <div class="col-12 alert alert-primary text-center">
                            Confirm deletion of the following Type Trick :
                             <br />                          
                            {{ type.name|upper}}
                            
                            {{ form_start(deleteForm, {'attr':{'class':'col-12'}}) }}
                            {{ form_widget(deleteForm.name) }}
                            <br/>
                            {{ form_widget(deleteForm.submit) }}
                            {{ form_end(deleteForm) }}

                        </div>
                    </div>


                </div>

            </div>

        </div>
    </div>
</section>

{% endblock %}