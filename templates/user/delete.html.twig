{% extends 'base.html.twig' %}

{% block title %}User Delete{% endblock %}

{% block body %}
<section id="profile" class="masthead bg-primary">
    <div class="container bg-white py-5 rounded">
        <div class="row col-10">
            <div class="">
                <a href="{{ path('app_users') }}" class="btn btn-primary">< Previous page</a>
            </div>
        </div>
        <div class="row d-flex justify-content-center">
            <div class="col-12 col-lg-6">
                <div class="col">
                    <div class="row mb-2">
                        <h1 class="text-center">User Delete</h1>
                        <hr class="divider" />
                    </div>
                    <div class="row">
                        <div class="col-12 alert alert-primary text-center">
                            Confirm deletion of the following user :
                            <br />
                            {{ user.firstname|capitalize ~ " " ~ user.lastname|upper }}
                            <br>
                            <span>{{ user.email }}</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 text-center">
                            <form action="" method="post">
                                <input type="hidden" name="delete" value="{{ user.id }}" />

                                        <button type="submit" class="btn btn-primary w-100">Confirm</button>
                            </form>
                        </div>
                    </div>

                </div>

            </div>

        </div>
    </div>
</section>

{% endblock %}