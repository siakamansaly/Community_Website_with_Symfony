<div class="modal" id="pictures" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      {{ form_start(picturesForm, {'attr':{'class':'col-12'}}) }}
      <div class="modal-content">
        <div class="modal-header">
          <h5 id="title_edit_picture" class="modal-title">Edit Picture</h5>
          <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close">
          </button>
        </div>
        <div class="modal-body">
          <p>{{ form_widget(picturesForm.name) }}</p>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Save</button>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
      {{ form_end(picturesForm) }}
    </div>
  </div>