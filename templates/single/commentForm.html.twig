{% if app.user %}
<div class="row my-5">
    <div class="col">
        {{ form_start(commentForm) }}
        {{ form_widget(commentForm.content) }}
        <button type="submit" class="btn btn-outline-secondary mt-2">Submit</button>
        {{ form_end(commentForm) }}
    </div>
</div>
{% else %}
<div class="row my-3">
    <div class="col-12 alert alert-warning  text-center">Log in to add a comment</span>
        <div class="col-12">

            <a href="{{path('app_login')}}" class="btn btn-outline-primary mt-2">Sign In</a>
        </div>
    </div>
</div>
{% endif %}